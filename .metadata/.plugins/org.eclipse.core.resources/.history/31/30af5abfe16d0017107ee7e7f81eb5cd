    </select>        
     
    <insert id="insertPerson" parameterType="ModelPerson">
        INSERT INTO 
        TB_Person ( id   , pw   , name, email   )
        VALUES       ( #{id}, #{pw}, #{name}, #{email} )
    </insert>
    
